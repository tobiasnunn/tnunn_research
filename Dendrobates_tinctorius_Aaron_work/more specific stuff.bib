	urldate = {2025-03-09},
	journal = {Microbiome},
	author = {Bates, Kieran A. and Sommer, Ulf and Hopkins, Kevin P. and Shelton, Jennifer M. G. and Wierzbicki, Claudia and Sergeant, Christopher and Tapley, Benjamin and Michaels, Christopher J. and Schmeller, Dirk S. and Loyau, Adeline and Bosch, Jaime and Viant, Mark R. and Harrison, Xavier A. and Garner, Trenton W. J. and Fisher, Matthew C.},
	month = dec,
	year = {2022},
	pages = {44},
	file = {PDF:C\:\\Users\\tobyn\\Zotero\\storage\\SZRSVZWQ\\Bates et al. - 2022 - Microbiome function predicts amphibian chytridiomycosis disease dynamics.pdf:application/pdf},
}

