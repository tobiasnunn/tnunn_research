	journal = {The ISME Journal},
	author = {Harris, Reid N and Brucker, Robert M and Walke, Jenifer B and Becker, Matthew H and Schwantes, Christian R and Flaherty, Devon C and Lam, Brianna A and Woodhams, Douglas C and Briggs, Cheryl J and Vredenburg, Vance T and Minbiole, Kevin P C},
